{
  "dask_slurm": {
    "queue": "defq",
    "cores": 8,
    "processes": 4,
    "memory": "24GB",
    "walltime": "24:00:00",
    "job_script_prologue": [
      "source /home/gdoran/.bashrc",
      "conda deactivate",
      "conda activate ecopro"
    ],
    "job_directives_skip": [ "--mem" ],
    "n_workers": 50
  },
  "chunks": {
    "easting": 512,
    "northing": 512
  },
  "output_chunks": {
    "easting": 512,
    "northing": 512
  },
  "focal_period": [2006, 2022],
  "reference_period": [1980, 2005],
  "spans": [1, 2, 3, 4, 5, 6],
  "time_dim": "year",
  "indices": [
    {
      "name": "PR",
      "name_format": "PR{span}",
      "long_name_format": "{span}-Year Cumulative Precipitation",
      "params": {
        "precip": "ppt"
      }
    },
    {
      "name": "PRET",
      "name_format": "PRET{span}",
      "long_name_format": "{span}-Year Cumulative Water Balance",
      "params": {
        "precip": "ppt",
        "et": "pet"
      }
    },
    {
      "name": "SPI",
      "name_format": "SPI{span}",
      "long_name_format": "{span}-Year Standard Precipitation Index",
      "params": {
        "chunk": {
          "northing": 256,
          "easting": 128
        }
      }
    },
    {
      "name": "SPEI",
      "name_format": "SPEI{span}",
      "long_name_format": "{span}-Year Standardized Water Balance Index",
      "params": {
        "chunk": {
          "northing": 256,
          "easting": 128
        }
      }
    }
  ]
}
